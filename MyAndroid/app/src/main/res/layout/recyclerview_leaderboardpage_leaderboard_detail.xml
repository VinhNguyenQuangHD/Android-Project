<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/linenear_background"
        android:padding="5dp">

        <ImageView
            android:id="@+id/leaderboard_detail_book_image"
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/leaderboard_detail_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:text="#Ten sach"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/leaderboard_detail_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leaderboard_detail_book_name"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:text="#Ten tac gia"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <RelativeLayout
            android:id="@+id/icon_watch_and_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="9dp"
            android:layout_marginRight="80dp">

            <ImageView
                android:id="@+id/id_watch_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_eye_white_24" />

            <TextView
                android:id="@+id/leaderboard_detail_book_watch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_watch_icon"
                android:layout_centerHorizontal="true"
                android:text="#Luot doc"
                android:textColor="@color/white"
                android:textSize="10dp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/leaderboard_detail_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="#1"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>