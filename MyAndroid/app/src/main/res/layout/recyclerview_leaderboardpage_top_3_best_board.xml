<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp">

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/linenear_background"
        android:padding="5dp">

        <TextView
            android:id="@+id/leaderboardpage_top_3_best_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="No.1"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/leaderboardpage_top_3_best_book_image"
            android:layout_width="85dp"
            android:layout_height="95dp"
            android:layout_below="@+id/leaderboardpage_top_3_best_rank"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/leaderboardpage_top_3_best_book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leaderboardpage_top_3_best_book_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="#Ten sach"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/leaderboardpage_top_3_best_book_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leaderboardpage_top_3_best_book_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="#Tentacgia"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/leaderboardpage_top_3_best_book_watch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leaderboardpage_top_3_best_book_author"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="#View"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>