<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/linenear_background">

        <TextView
            android:id="@+id/normal_not_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Người gửi:"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/normal_from_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/normal_not_txt"
            android:text="#Tennguoigui"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/normal_content_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/normal_not_txt"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="#Noidunggui"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/notifi_delete_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/normal_content_txt"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/delete_24" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>