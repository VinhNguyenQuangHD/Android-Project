<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bookdetailpage_card_friend_list">

    <RelativeLayout
        android:id="@+id/bookdetailpage_friend_list_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/bookdetailpage_friend_list_image_load"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/bookdetailpage_friend_list_name_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/bookdetailpage_friend_list_image_load"
            android:text="#Tentaikhoan"
            android:textSize="15dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/bookdetail_cancel_sending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            >

            <ImageButton
                android:id="@+id/bookdetailpage_friend_list_delete_friend_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/clear_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bookdetailpage_friend_list_delete_friend_btn"
                android:text="Hủy bỏ"
                android:textSize="10dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bookdetail_confirm_sending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="60dp">

            <ImageButton
                android:id="@+id/bookdetailpage_friend_list_confirm_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/accept" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bookdetailpage_friend_list_confirm_btn"
                android:layout_centerHorizontal="true"
                android:text="Xác nhận"
                android:textColor="@color/white"
                android:textSize="10dp" />

        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>