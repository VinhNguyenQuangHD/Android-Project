<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linenear_background"
    tools:context=".Adminpage_AuthorManager_AddnewAuthor">

    <TextView
        android:id="@+id/add_new_author_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm tác giả mới"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/add_new_author_authortitle_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên tác giả"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_below="@+id/add_new_author_title_txt"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/add_new_author_authortitle_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_new_author_authortitle_txt"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="@color/white"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/add_new_author_description_author_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_new_author_authortitle_text"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="Mô tả"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/add_new_author_author_description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_new_author_description_author_txt"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="@color/white"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/add_new_author_image_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_new_author_author_description_text"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="Hình tác giả"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/add_new_author_images_zone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_new_author_image_txt"
        android:layout_margin="10dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/add_new_book_image_file_txt"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="#filehinhtacgia"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_new_author_file_directory_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/rough_corner_2"
            android:padding="10dp"
            android:text="Đường dẫn"
            android:textColor="@color/white" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/add_new_author_image_uri"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/upload_author_button_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_below="@id/add_new_author_images_zone"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_new_author_img_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200"
            android:padding="20dp"
            android:text="Tải lên"
            android:textColor="@color/ultra_blue"
            android:textSize="20dp" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/add_new_book_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upload_author_button_frame"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_new_author_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200"
            android:padding="20dp"
            android:text="Thêm tác giả"
            android:textColor="@color/ultra_blue"
            android:textSize="20dp" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>