<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linenear_background"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/linenear_background"
        tools:context=".Home_frag">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/homepage_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/side_menu_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Trang chủ"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/homepage_user_txt"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="#tendangnhap"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_img_display"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/homepage_user_txt" />


        <RelativeLayout
            android:id="@+id/daily_login_frames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/user_img_display">

            <ImageButton
                android:id="@+id/homepage_daily_login"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/daily_reward" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/homepage_daily_login"
                android:layout_marginTop="2dp"
                android:text="Điểm danh"
                android:textColor="@color/white"
                android:textSize="10dp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/homepage_user_point_txt"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/homepage_user_txt"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:text="10"
            android:textColor="@color/yellow"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/whatnew_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/homepage_txt"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Đầu sách trong tuần"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/side_menu_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rought_button"
            android:src="@drawable/ic_baseline_menu_24" />

        <TextView
            android:id="@+id/recommend_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookpage_datetime_new_book"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Khuyến nghị trong tầm giá"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recomend_listzzz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recommend_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bookpage_datetime_new_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/whatnew_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />
    </RelativeLayout>
</ScrollView>